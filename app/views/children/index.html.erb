<p id="notice"><%= notice %></p>

<h1>Listing Children <%=  %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birth date</th>
      <th>Gender</th>
      <th>Language</th>
      <th>Father name</th>
      <th>Father phone</th>
      <th>Mother name</th>
      <th>Mother phone</th>
      <th>Voter</th>
      <th>Address</th>
      <th>Dist character</th>
      <th>Disability status</th>
      <th>Photo</th>
      <th>Finger print</th>
      <th>Issue date</th>
      <th>Issuer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.name %></td>
        <td><%= child.birth_date %></td>
        <td><%= child.gender %></td>
        <td><%= child.language %></td>
        <td><%= child.father_name %></td>
        <td><%= child.father_phone %></td>
        <td><%= child.mother_name %></td>
        <td><%= child.mother_phone %></td>
        <td><%= child.voter_id %></td>
        <td><%= child.address %></td>
        <td><%= child.dist_character %></td>
        <td><%= child.disability_status %></td>
        <td><%= child.photo %></td>
        <td><%= child.finger_print %></td>
        <td><%= child.issue_date %></td>
        <td><%= child.issuer %></td>
        <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

